import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class FacebookXpath {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.setProperty("webdriver.chrome.driver","C:\\Users\\Swapn\\Documents\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.get("http://facebook.com");//open URL of the browser
		
		//X-path syntax - "//tagName[@attribute='value']" or "//*[@attribute='value']"
		driver.findElement(By.xpath("//*[@name='email']")).sendKeys("abc4d");//different way to express synta for xpath
		driver.findElement(By.xpath("//input[@name='pass']")).sendKeys("Hello");
		driver.findElement(By.xpath("//button[@name='login']")).click();
		
		//CSS syntax - "tagName[@attribute='value']" or "[@attribute='value']"
		
	}

}
